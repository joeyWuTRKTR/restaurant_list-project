<div class="row">
  <div class="col-md-6 mx-auto">
    <h3>Register Page</h3>
    <div class="card mt-3">
      <form action="/users/register" method="POST">
        <div class="form-control row">
          <label class="col-md-6" for="user">user name:</label>
          <input type="text" id="user" name="user" placeholder="user name">
        </div>

        <div class="form-control row">
          <label class="col-md-6" for="email">email:</label>
          <input type="email" id="email" name="email" placeholder="abc@1234">
        </div>

        <div class="form-control row">
          <label class="col-md-6" for="password">password:</label>
          <input type="password" id="password" name="password" placeholder="password">
        </div>

        <div class="form-control row">
          <label class="col-md-6" for="passwordConfirm">password confirm</label>
          <input type="password" id="passwordConfirm" name="passwordConfirm" placeholder="password confirm">
        </div>
        <button type="submit" class="btn btn-primary">送出</button>
      </form>
    </div>
  </div>
</div>