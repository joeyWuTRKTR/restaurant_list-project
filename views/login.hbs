<link rel="stylesheet" href="/stylesheets/style.css">

<div class="row">
  <div class="col-md-6 mx-auto mt-5" style="max-width: 600px">
    {{> message}}
    <div class="card card-body" style="background-color: #F5F5F5;">
      <h3 class="text-center">Login Page</h3>
      <form action="/users/login" method="POST">
        <div class="form-group row">
          <label class="col-3" for="email">email:</label>
          <input class="col-9 form-control" type="email" id="email" name="email" placeholder="abc@1234">
        </div>
        
        <div class="form-group row">
          <label class="col-3" for="password">password:</label>
          <input class="col-9 form-control" type="password" id="password" name="password" placeholder="password">
        </div>
        <div class="form-group row d-flex flex-column">
          <button type="submit" class="col-auto btn btn-success">Login</button>
          <a href="/auth/facebook" class="btn btn-primary mt-2">Facebook Login</a>
          <p class="mt-2 font-weight-bold">Haven't Account?  <a href="./register">Register</a></p>
        </div>
      </form>
    </div>
  </div>
</div>