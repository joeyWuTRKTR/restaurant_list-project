<link rel="stylesheet" href="/stylesheets/new.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
  integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
<div class="banner"></div>
<form action="/restaurants" method="POST">
  <div class="container m-5">

    <h3 class="header">新增餐廳資料:</h3>

    <br>
    <div class="form-group row">
      <label class="col-sm-4" for="name"><i class="fas fa-home"></i>  Name(Chinese):</label>
      <input type="text" class="form-control col-sm-8" id="name" name="name" placeholder="ex: XXX泰好吃" required>
    </div>
    <div class="form-group row">
      <label class="col-sm-4" for="name_en"><i class="fas fa-home"></i>  Name(English):</label>
      <input type="text" class="form-control col-sm-8" id="name_en" name="name_en" placeholder="ex: XXX taste good">
    </div>
    <div class="form-group row">
      <label class="col-sm-4" for="category"><i class="fas fa-bookmark"></i>  Category:</label>
      <input type="text" class="form-control col-sm-8" id="category" name="category" placeholder="ex: 泰國料理" required>
    </div>
    <div class="form-group row">
      <label class="col-sm-4" for="location"><i class="fas fa-home"></i>  Location:</label>
      <input type="text" class="form-control col-sm-8" id="location" name="location" placeholder="ex: XX路XX號" required> 
    </div>
    <div class="form-group row">
      <label class="col-sm-4" for="phone"><i class="fas fa-phone"></i>  Phone:</label>
      <input type="tel" class="form-control col-sm-8" id="phone" name="phone" placeholder="ex: 01-1234-5678" required> 
    </div>
    <div class="form-group row">
      <label class="col-sm-4" for="rating"><i class="fas fa-star"></i>  Rating:</label>
      <input type="text" class="form-control col-sm-8" id="rating" name="rating" placeholder="ex: 0~5" required>
    </div>
    <div class="form-group row">
      <label class="col-sm-4" for="image_url"><i class="fas fa-camera"></i>  Image-url:</label>
      <input type="text" class="form-control col-sm-8" id="image_url" name="image_url" placeholder="ex: xxxxxxxxxxxxxx.jpg" required>
    </div>
    <div class="form-group row">
      <label class="col-sm-4" for="description"><i class="fas fa-comment-dots"></i>  Description:</label>
      <textarea class="col-sm-4" id="description" name="description" rows="2" cols="50" placeholder="ex: 很久很久以前有一家......" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-basic" href="/" role="button">Back</a>
  </div>
</form>