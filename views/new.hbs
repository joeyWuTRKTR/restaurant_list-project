<form action="/restaurants" method="POST">

  <div class="form-group row">
    <label class="col-sm-4" for="name">Name:</label>
    <input type="text" class="form-control col-sm-8" id="name" name="name">
  </div>
  <div class="form-group row">
    <label class="col-sm-4" for="category">Category:</label>
    <input type="text" class="form-control col-sm-8" id="category" name="category">
  </div>
  <div class="form-group row">
    <label class="col-sm-4" for="rating">Rating:</label>
    <input type="text" class="form-control col-sm-8" id="rating" name="rating">
  </div>
  <div class="form-group row">
    <label class="col-sm-4" for="image">Choose a profile picture:</label>
    <input class="col-sm-8" type="file" id="image" name="image" accept="image/png, image/jpeg, image/jpg">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>